<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_doctors_constraint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_doctors_constraint2">
        <ImageButton
            android:id="@+id/layout_doctors_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sample_doctor"
            android:background="@drawable/bn_selector9"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/layout_doctors_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="某医生\n什么什么主任\n什么什么导师"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_doctors_constraint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/layout_doctors_constraint1"
        app:layout_constraintRight_toLeftOf="@id/layout_doctors_constraint3">
        <ImageButton
            android:id="@+id/layout_doctors_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sample_doctor"
            android:background="@drawable/bn_selector9"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/layout_doctors_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="某医生\n什么什么主任\n什么什么导师"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/layout_doctors_button2"
            app:layout_constraintRight_toRightOf="@+id/layout_doctors_button2"
            app:layout_constraintBottom_toBottomOf="@+id/layout_doctors_button2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_doctors_constraint3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/layout_doctors_constraint2"
        app:layout_constraintRight_toLeftOf="@id/layout_doctors_constraint4">
        <ImageButton
            android:id="@+id/layout_doctors_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sample_doctor"
            android:background="@drawable/bn_selector9"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/layout_doctors_text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="某医生\n什么什么主任\n什么什么导师"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/layout_doctors_button3"
            app:layout_constraintRight_toRightOf="@+id/layout_doctors_button3"
            app:layout_constraintBottom_toBottomOf="@+id/layout_doctors_button3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_doctors_constraint4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/layout_doctors_constraint3"
        app:layout_constraintRight_toRightOf="parent">
        <ImageButton
            android:id="@+id/layout_doctors_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sample_doctor"
            android:background="@drawable/bn_selector9"
            android:scaleType="centerInside"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/layout_doctors_text4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="某医生\n什么什么主任\n什么什么导师"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/layout_doctors_button4"
            app:layout_constraintRight_toRightOf="@+id/layout_doctors_button4"
            app:layout_constraintBottom_toBottomOf="@+id/layout_doctors_button4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
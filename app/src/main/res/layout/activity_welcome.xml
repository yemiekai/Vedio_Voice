<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:id="@+id/welcome1_layout"
    android:background="@drawable/welcome_image">

    <VideoView
        android:id="@+id/welcome_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="按2次[返回] 结束视频"
        android:textSize="15dp"

        app:layout_constraintTop_toTopOf="@+id/welcome_video"
        app:layout_constraintRight_toRightOf="@+id/welcome_video"/>
</androidx.constraintlayout.widget.ConstraintLayout>